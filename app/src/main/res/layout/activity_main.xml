<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!--视频-->
    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
    </SurfaceView>

    <!--左侧菜单-->
    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/txt_mu"
            android:text="全部节目"
            android:textColor="#fff"
            android:textSize="@dimen/h_55"
            android:layout_marginTop="@dimen/h_10"
            android:gravity="center"
            android:background="@drawable/epg_line"
            />
        <ListView
            android:id="@+id/ls_content"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_mu"
            android:paddingLeft="20dp"
            android:listSelector="@null"
            android:cacheColorHint="@android:color/transparent"
            />
    </RelativeLayout>
    <!--出错的展示页-->
    <ImageView
        android:id="@+id/iv_videoErrorShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/no_video"
        android:scaleType="fitXY"
        ></ImageView>
    <!--中间滚动广告-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_scrollView"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notify_icon"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_scrollTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </RelativeLayout>
    <!--底部文字和右侧文字-->
    <RelativeLayout
        android:id="@+id/rl_VideoName"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/videoNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#ff9900"
            android:textStyle="bold"
            android:textSize="70sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:id="@+id/ll_ph_bottom"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:background="#88000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_bottomNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff9900"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/tv_numberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff9900"
                    android:textSize="40sp"
                    android:maxLines="15"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/epg_line_up"
                android:layout_marginRight="30dp"
                />
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/osd_new_time"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="25dp"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:src="@drawable/epg_line"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/iv_guangGao"
                    android:layout_width="@dimen/w_120"
                    android:layout_height="@dimen/w_120" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_errorToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="频道源故障，请切换其他频道"
            android:layout_above="@id/ll_ph_bottom"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:visibility="gone"
            />
    </RelativeLayout>

    <!--欢迎页-->
    <RelativeLayout
        android:id="@+id/cpb_countdownParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        >
        <wzzb.ybzb.com.wzzb.util.CountDownProgressBar
            android:id="@+id/cpb_countdown"
            android:layout_width="70dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            app:countDown_centerTextSize="25dp"
            app:countDown_circleWidth="4dp"
            app:countDown_firstColor="#aaaaaa"
            app:countDown_secondColor="#2395FF"
            app:countDown_isShowGradient="true"
            app:countDown_centerTextColor="#ff9900"
            android:layout_alignParentRight="true"
            android:layout_height="70dp" />

    </RelativeLayout>
    <!--按返回键的界面-->
    <LinearLayout
        android:id="@+id/ll_backFinish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="@dimen/w_1000"
            android:layout_height="@dimen/h_600"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <RelativeLayout
                android:id="@+id/rl_backLeft"
                android:layout_width="@dimen/w_600"
                android:layout_height="match_parent"
                android:focusable="true"
                >
                <RelativeLayout
                    android:layout_width="@dimen/w_600"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/iv_outImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击查看详情"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textColor="#ffffff"
                        android:padding="5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#bb9fa6b6"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/v_backLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/w_400"
                android:layout_height="match_parent"
                android:background="#324252"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_lookAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="再看一会"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@drawable/shape_focus_rectangle10dp"
                        android:focusable="true"
                        />
                    <TextView
                        android:id="@+id/tv_unLook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="退出不看了"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@drawable/shape_unfocus_rectangle10dp"
                        android:focusable="true"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>